{
	"yaml.format.enable": true,
	"yaml.customTags": [
		"!vault"
	],
	"yaml.schemaStore.enable": true,
	"ansible.ansible.useFullyQualifiedCollectionNames": false,
	"pylsp.builtin.enableInstallPylspMypy": false, // for now
	"pylsp.builtin.enableInstallPylsIsort": true,
	"pylsp.builtin.enableInstallPythonLspBlack": true,
	"pylsp.builtin.installExtrasArgs": [
		"flake8",
		"mccabe",
		"pycodestyle",
		"pydocstyle",
		"pyflakes",
		"pylint",
		"rope"
	],
	"solargraph.formatting": true,
	"solargraph.diagnostics": true,
	"diagnostic-languageserver.enable": true,
	"diagnostic-languageserver.mergeConfig": true,
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck",
		"systemd": "systemd-analyze",
		"fish": "fish"
	},
	"diagnostic-languageserver.formatFiletypes": {
		"sh": "shfmt",
		"fish": "fish_indent"
	},
	"diagnostic-languageserver.formatters": {
		// define our formatter so that we can reference it from
		// `diagnostic-languageserver.formatFiletypes`
		"shfmt": {
			"command": "shfmt",
			"args": [
				"-i",
				"4",
				"-bn",
				"-ci",
				"-sr"
			]
		}
	}
}
